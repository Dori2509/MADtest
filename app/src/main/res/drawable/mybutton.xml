<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#96cdcd" />
            <gradient android:angle="-90" android:startColor="#4fbdf0" android:endColor="#6fbbde"  />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1b76a1" />
            <gradient android:angle="-90" android:startColor="#4fbdf0" android:endColor="#4fbdf0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1b76a1" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1b76a1" />
            <gradient android:angle="-90" android:startColor="#4fbdf0" android:endColor="#1b76a1" />
        </shape>
    </item>
</selector>